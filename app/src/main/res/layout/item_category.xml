<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/default_size"
    android:layout_marginBottom="@dimen/default_size">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/itemCategoryTextViewNameCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_size"
        android:textColor="@color/text_combo"
        android:textSize="@dimen/category_text_combo"
        app:layout_constraintTop_toTopOf="@+id/itemCategoryImageViewExpandableAction"
        app:layout_constraintBottom_toBottomOf="@+id/itemCategoryImageViewExpandableAction"
        app:layout_constraintEnd_toStartOf="@+id/itemCategoryImageViewExpandableAction"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/itemCategoryImageViewExpandableAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_control_point_24"
        app:tint="@color/blue_749"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/itemCategoryLinearLayoutProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/itemCategoryTextViewNameCategory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>