<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ParrotTest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_749</item>
        <item name="colorPrimaryVariant">@color/blue_749</item>
        <item name="colorOnPrimary">@color/white_99</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_554</item>
        <item name="colorSecondaryVariant">@color/orange_554</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ParrotTestNoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_749</item>
        <item name="colorPrimaryVariant">@color/blue_749</item>
        <item name="colorOnPrimary">@color/white_99</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_554</item>
        <item name="colorSecondaryVariant">@color/orange_554</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ActivityLoginTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">

        <item name="boxStrokeColor">@color/orange_554</item>
        <item name="colorControlActivated">@color/orange_554</item>
        <item name="colorControlHighlight">@color/orange_554</item>

    </style>
</resources>